
platform :ios, '13.0'

def netWorkPods
  pod 'ReachabilitySwift' # Network Info Tool
  pod 'CocoaAsyncSocket'
  pod 'CocoaLumberjack'
end

def appPods
    netWorkPods
    pod 'ZKProgressHUD'
    pod 'lottie-ios'
    pod 'Firebase/Analytics'
    pod 'Firebase/Crashlytics'
    pod 'Firebase/RemoteConfig'
    pod 'Google-Mobile-Ads-SDK'
    pod 'FBSDKCoreKit'
    pod 'SnapKit'
end

target 'Moon' do
  use_frameworks!
  appPods
end

target 'tunnelProvider' do
  use_frameworks!
  netWorkPods
end
 
